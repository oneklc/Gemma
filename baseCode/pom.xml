	<profiles>
		<profile>
			<id>assemble-src</id>
			<activation>
				<activeByDefault>false</activeByDefault>
				<property>
					<name>assemble-src</name>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-assembly-plugin</artifactId>
						<configuration>
							<descriptors>
								<descriptor>
